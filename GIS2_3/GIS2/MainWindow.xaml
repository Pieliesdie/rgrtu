<Window x:Class="GIS2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIS2"
        mc:Ignorable="d"
        Title="GIS" Height="500" Width="1050">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <Label HorizontalAlignment="Center" FontSize="16">16 Colors</Label>
            <Image x:Name="img" Width="500" Height="300"></Image>
            <CheckBox Margin="100,15,0,0" Content="Invert" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"></CheckBox>
            <Button HorizontalAlignment="Right" Width="100" Height="30" Content="Save" Margin="20" Click="Button_Click"></Button>
        </StackPanel>
        
        <StackPanel DockPanel.Dock="Left">
            <Label HorizontalAlignment="Center" FontSize="16">256 Colors</Label>
            <Image x:Name="img2" Width="500" Height="300"></Image>
            <CheckBox Margin="100,15,0,0" Content="Invert" Checked="CheckBox_Checked_1" Unchecked="CheckBox_Unchecked_1"></CheckBox>
            <Button HorizontalAlignment="Right" Width="100" Height="30" Content="Save" Margin="20" Click="Button_Click_1"></Button>
        </StackPanel>
        
    </DockPanel>
</Window>
